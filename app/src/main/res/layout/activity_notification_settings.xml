<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="32dp"/>

        <!-- 할일 개수 알림 설정 추가 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTodoCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="할일 개수 알림"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="@drawable/switch_background"
            android:layout_marginBottom="24dp"/>

        <!-- 진동 설정 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="진동"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="@drawable/switch_background"/>

        <RadioGroup
            android:id="@+id/rgVibrationPatterns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginStart="12dp">

            <RadioButton
                android:id="@+id/rbVibrationPattern1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="짧은 진동"
                android:textColor="#000000"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbVibrationPattern2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="긴 진동"
                android:textColor="#000000"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbVibrationPattern3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연속 진동"
                android:textColor="#000000"
                android:padding="8dp"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진동 테스트"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:padding="12dp"/>

        <!-- 소리 설정 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소리"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:background="@drawable/switch_background"/>

        <RadioGroup
            android:id="@+id/rgSoundTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginStart="12dp">

            <RadioButton
                android:id="@+id/rbSoundType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림음"
                android:textColor="#000000"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbSoundType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알람음"
                android:textColor="#000000"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbSoundType3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="벨소리"
                android:textColor="#000000"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbSoundType4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 지정"
                android:textColor="#000000"
                android:padding="8dp"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음악 파일 선택"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소리 테스트"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>