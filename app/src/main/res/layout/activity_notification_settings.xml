<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- 진동 설정 -->
    <Switch
        android:id="@+id/switchVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="진동"
        android:textSize="18sp"
        android:padding="8dp"/>

    <RadioGroup
        android:id="@+id/rgVibrationPatterns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/rbVibrationPattern1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="짧은 진동"/>

        <RadioButton
            android:id="@+id/rbVibrationPattern2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="긴 진동"/>

        <RadioButton
            android:id="@+id/rbVibrationPattern3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연속 진동"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnTestVibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진동 테스트"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"/>

    <!-- 소리 설정 -->
    <Switch
        android:id="@+id/switchSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소리"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginTop="24dp"/>

    <RadioGroup
        android:id="@+id/rgSoundTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/rbSoundType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림음"/>

        <RadioButton
            android:id="@+id/rbSoundType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람음"/>

        <RadioButton
            android:id="@+id/rbSoundType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="벨소리"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnTestSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소리 테스트"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"/>

</LinearLayout>